<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TWallet.Modals.AddCurrency">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="Currency" FontSize="Medium" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <Picker x:Name="currency_picker" Title="Pick currency" ItemDisplayBinding="{Binding CurrencyDescription}" />  
            <StackLayout Orientation="Vertical">
                <Label Text="Amount" FontSize="Medium" HorizontalOptions="FillAndExpand" />
                <Entry Placeholder="Enter the ammount" x:Name="ammount" Keyboard="Numeric"/>
            </StackLayout>
            <Button x:Name="topUpButton" Text="Top Up" Clicked="OnTopUpClicked" />
            <Button x:Name="topDownButton" Text="Top Down" Clicked="OnTopDownClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
